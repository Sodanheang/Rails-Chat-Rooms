%nav.navbar.navbar-expand-lg.navbar-dark.bg-info
  = link_to root_path, class: 'navbar-brand' do
    %i.fa.fa-comments{"aria-hidden" => "true"}
    Rails Chat Rooms
  %button.navbar-toggler{"aria-controls" => "navbarNavDropdown", "aria-expanded" => "false", "aria-label" => "Toggle navigation", "data-target" => "#navbarNavDropdown", "data-toggle" => "collapse", :type => "button"}
    %span.navbar-toggler-icon
  #navbarNavDropdown.collapse.navbar-collapse
    - if user_signed_in?
      %ul.navbar-nav.ml-auto
        %li.nav-item.dropdown.active
          %a#navbarDropdownMenuLink.nav-link.dropdown-toggle.btn.btn-info{"aria-expanded" => "false", "aria-haspopup" => "true", "data-toggle" => "dropdown"}
            %i.fa.fa-user-circle-o{"aria-hidden" => "true"}
            = current_user.email
          .dropdown-menu{"aria-labelledby" => "navbarDropdownMenuLink"}
            = link_to new_chat_room_path, class: 'dropdown-item' do
              %i.fa.fa-plus-circle{"aria-hidden" => "true"}
              Create New Room
            = link_to edit_user_registration_path(current_user), class: 'dropdown-item' do
              %i.fa.fa-user-circle{"aria-hidden" => "true"}
              Edit Account
            = link_to destroy_user_session_path, method: :delete, class: 'dropdown-item' do
              %i.fa.fa-power-off{"aria-hidden" => "true"}
              Log Out
    - else
      %ul.navbar-nav.ml-auto{:style => "color: white"} Nhean &amp; Kanitha