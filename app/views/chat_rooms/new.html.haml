.row.justify-content-center
  .col-md-4.col-xs-12
    .card
      %h4.card-header
        %i.fa.fa-plus-square{"aria-hidden" => "true"}
        Create Chat Room
      .card-body
        = simple_form_for @chat_room do |f|
          = f.input :title, autofocus: true, class: 'form-control'
          = f.button :submit, class: 'btn btn-info'
        %br
        = link_to chat_rooms_path, class: 'card-link btn btn-secondary' do
          %i.fa.fa-chevron-left{"aria-hidden" => "true"} 
          Back
