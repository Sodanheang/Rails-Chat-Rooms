- if current_user.is_admin? or @chat_room.user.id == current_user.id
  .row.justify-content-center
    .col-md-4.col-xs-12
      .card
        %h4.card-header
          %i.fa.fa-plus-square{"aria-hidden" => "true"}
          Edit Chat Room
        .card-body
          = render 'form', comment: @chat_room
          %br
          = link_to chat_rooms_path, class: 'card-link btn btn-secondary' do
            %i.fa.fa-chevron-left{"aria-hidden" => "true"} 
            Back
- else
  .alert.alert-success{role: 'alert'}
    %ul
      %li Thanks for trying to test our security!
      %li
        Is this
        %i.fa.fa-map-marker{"aria-hidden" => "true"}
        = request.remote_ip
        (
        = request.location.country
        )
        your IP Address?
      %li
        If not, You are cool!
        %i.fa.fa-smile-o{"aria-hidden" => "true"}
      %li
        If yes, Try to study more! Cambodia Needs More Hacker!
        %i.fa.fa-smile-o{"aria-hidden" => "true"}